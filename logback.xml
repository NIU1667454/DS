<configuration>

  <!-- Creation of an appender for the log outputs to console -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder><pattern>
      %d{HH:mm:ss} [%thread]%-5level%logger{36}-%msg%n
    </pattern></encoder>
  </appender>

  <!-- Creation of an appender for the log outputs to an HTML file -->
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.html.HTMLLayout">
        <pattern>
          %d{dd/MM/yyyy hh:mm:ss}%thread%mdc%level%logger%msg
        </pattern>
      </layout>
    </encoder>
    <file>loggersPractica.html</file>
  </appender>

  <root level="warn">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
  </root>

  <logger name="baseNoStates" level="info"/>

</configuration>